extend layout
block principal
  .principal
    h2 modification de l'article : #{article.titre}
    form(action="/admin/article/edit", method="post")
      input(type="text", name="titre", placeholder="titre" value="#{article.titre}" required)
      br
      textarea(name="textjade", rows="10", cols="100", id="textjade") #{contenu}
      br
      a(href="/admin/addtest" target="_blank" id="linktest") test
      | &nbsp;
      input(type="hidden" name="textvalue" id="linkhidden")
      input(type="hidden" name="articleid" value="#{article.id}")
      input(type="hidden" name="articledate" value="#{article.date}")
      input(type="submit" value="hop")
  script(type="text/javascript", src='/js/jquery.js')
  script(type="text/javascript", src='/js/rendu.js')